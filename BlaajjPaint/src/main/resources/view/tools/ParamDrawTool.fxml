<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<HBox fx:id="paramDrawTools" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.tools.ToolDrawer.ParamDrawToolController">
	<children>
		<Label text="Épaisseur">
			<font>
				<Font size="18.0" />
			</font>
			<HBox.margin>
				<Insets right="10.0" />
			</HBox.margin>
		</Label>
		<Slider fx:id="thicknessSlider" blockIncrement="1.0" max="200.0" min="1.0" minorTickCount="1" onMouseDragged="#sliderValueChanged" onMousePressed="#sliderValueChanged" onMouseReleased="#sliderValueChanged" snapToTicks="true" value="1.0">
			<HBox.margin>
				<Insets top="7.0" />
			</HBox.margin>
         <tooltip>
            <Tooltip text="Gérer l'épaisseur de l'outil" />
         </tooltip>
		</Slider>
		<TextField fx:id="thicknessTextField" onAction="#textFieldOnTextChange" prefWidth="60.0">
         <tooltip>
            <Tooltip text="Gérer l'épaisseur de l'outil" />
         </tooltip></TextField>
	</children>
	<padding>
		<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
	</padding>
</HBox>
