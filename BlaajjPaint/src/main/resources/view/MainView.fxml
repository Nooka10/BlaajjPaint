<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>

<BorderPane fx:id="mainView" onKeyPressed="#KeyPressed" prefHeight="400.0" prefWidth="600.0" stylesheets="@MainStyleSheet.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" ><!--fx:controller="controller.MainViewController"-->
	<left>
		<AnchorPane prefWidth="70.0">
			<children>
				<fx:include fx:id="toolBar" source="tools/Toolbar.fxml" AnchorPane.bottomAnchor="0.0" AnchorPane.topAnchor="0.0" />
			</children>
		</AnchorPane>
	</left>
	<right>
		<AnchorPane>
			<children>
				<fx:include fx:id="rightMenu" source="rightMenu/RightMenu.fxml" AnchorPane.bottomAnchor="0.0" AnchorPane.topAnchor="0.0" />
			</children>
		</AnchorPane>
	</right>
   <top>
	  <fx:include fx:id="menuBar" source="menubar/Menubar.fxml" AnchorPane.bottomAnchor="0.0" AnchorPane.topAnchor="0.0" />
   </top>
   <center>
      <AnchorPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <AnchorPane fx:id="paramBar" minHeight="40.0" prefHeight="40.0" styleClass="menuBackground" stylesheets="@MainStyleSheet.css" AnchorPane.bottomAnchor="359.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
            <ScrollPane fx:id="scrollPane" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="40.0" hbarPolicy="ALWAYS" vbarPolicy="ALWAYS"/>
         </children>
      </AnchorPane>
   </center>
   <bottom>
      <HBox>
         <children>
            <Pane>
               <padding>
                  <Insets left="500.0" />
               </padding>
            </Pane>
            <Button mnemonicParsing="false" onAction="#zoomOut" text="-" />
            <Label fx:id="zoomLabel" text="100%" />
            <Button mnemonicParsing="false" onAction="#zoomIn" text="+" />
         </children>
      </HBox>
   </bottom>
</BorderPane>
