<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>

<MenuBar fx:id="menuBar" styleClass="menuBackground" xmlns="http://javafx.com/javafx/9" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.menubar.MenuBarController">
	<menus>
		<Menu mnemonicParsing="false" text="Fichier">
			<items>
				<MenuItem id="menuBar_nouveau" mnemonicParsing="false" onAction="#handleNew" text="Nouveau" />
				<MenuItem id="menuBar_ouvrir" mnemonicParsing="false" onAction="#handleOpen" text="Ouvrir" />
				<MenuItem id="menuBar_enregistrer" mnemonicParsing="false" onAction="#handleSave" text="Enregistrer" />
				<MenuItem id="menuBar_enregistrerSous" mnemonicParsing="false" onAction="#handleSaveAs" text="Enregister sous" />
				<MenuItem id="menuBar_exporter" mnemonicParsing="false" onAction="#export" text="Exporter" />
				<MenuItem id="menuBar_importer" mnemonicParsing="false" onAction="#importImage" text="Importer une image" />
				<MenuItem id="menuBar_fermer" mnemonicParsing="false" text="Fermer" />
			</items>
		</Menu>
		<Menu mnemonicParsing="false" text="Edition">
			<items>
				<MenuItem id="menuBar_undo" mnemonicParsing="false" onAction="#undo" text="Undo" />
				<MenuItem id="menuBar_redo" mnemonicParsing="false" onAction="#redo" text="Redo" />
			</items>
		</Menu>
		<Menu mnemonicParsing="false" text="Calque">
			<items>
				<MenuItem id="menuBar_nouveauCalque" mnemonicParsing="false" onAction="#newLayer" text="Nouveau" />
				<MenuItem id="menuBar_dupliquerCalque" mnemonicParsing="false" onAction="#duplicateLayer" text="Dupliquer" />
				<MenuItem id="menuBar_supprimerCalque" mnemonicParsing="false" onAction="#deleteLayer" text="Supprimer" />
				<MenuItem id="menuBar_fusionnerCalques" mnemonicParsing="false" onAction="#fusionLayer" text="Fusionner les calques séléctionnés" />
				<MenuItem id="menuBar_aplatirCalques" mnemonicParsing="false" onAction="#mergeAllLayer" text="Aplatir les calques" />
				<MenuItem id="menuBar_masquerCalques" mnemonicParsing="false" onAction="#hideCurrentLayer" text="Masquer le calque séléctionné" />
			</items>
		</Menu>
		<Menu mnemonicParsing="false" text="Aide">
			<items>
				<MenuItem id="menuBar_aPropos" mnemonicParsing="false" text="A propos" />
				<MenuItem id="menuBar_manuel" mnemonicParsing="false" text="Manuel utilisateur" />
			</items>
		</Menu>
	</menus>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
</MenuBar>
