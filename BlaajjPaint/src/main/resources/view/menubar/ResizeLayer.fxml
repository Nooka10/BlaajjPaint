<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="200.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.menubar.ResizeLayerController">
   <children>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="400.0">
         <children>
            <HBox alignment="CENTER">
               <children>
               <Label text="Largeur">
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </Label>
               <TextField fx:id="textFieldWidth" maxWidth="80.0" text="" />
               </children>
               <padding>
                  <Insets bottom="10.0" />
               </padding>
            </HBox>
            <HBox alignment="CENTER">
               <children>
               <Label alignment="CENTER" text="Hauteur">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                     <padding>
                        <Insets right="10.0" />
                     </padding>
                  </Label>
               <TextField fx:id="textFieldHeight" disable="true" maxWidth="80.0" text="" />
               </children>
               <padding>
                  <Insets bottom="10.0" />
               </padding>
            </HBox>
            <VBox alignment="CENTER">
               <children>
               <CheckBox fx:id="checkBoxResizeImage" mnemonicParsing="false" selected="true" text="Ajuster l'image">
                     <padding>
                        <Insets bottom="10.0" />
                     </padding>
                  </CheckBox>
               <CheckBox fx:id="checkBoxRatio" mnemonicParsing="false" onAction="#checkBoxRationChange" selected="true" text="Garder ratio">
                     <VBox.margin>
                        <Insets bottom="10.0" />
                     </VBox.margin>
                  </CheckBox>
               </children>
            </VBox>
         <Button fx:id="validateResizeButton" mnemonicParsing="false" onAction="#validateResize" text="Valider" />
         </children>
      </VBox>
   </children>
</AnchorPane>
