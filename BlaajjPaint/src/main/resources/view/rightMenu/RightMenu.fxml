<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="rightMenu" maxWidth="250.0" minWidth="250.0" styleClass="menuBackground" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.rightMenu.RightMenuController">
	<children>
		<VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
			<children>
				<ColorPicker fx:id="colorPicker" minWidth="230.0" onAction="#selectColor" stylesheets="@RightMenuStyleSheet.css">
					<styleClass>
						<String fx:value="menuButton" />
						<String fx:value="colorPicker" />
					</styleClass>
               <tooltip>
                  <Tooltip text="Choix de la couleur" />
               </tooltip>
				</ColorPicker>
				<VBox>
					<children>
						<Label text="Historique">
							<font>
								<Font name="System Bold" size="24.0" />
							</font>
						</Label>
						<ScrollPane fitToWidth="true" maxHeight="300.0" minHeight="150.0" prefHeight="300.0">
							<content>
								<VBox fx:id="historyList" minHeight="50.0" />
							</content>
						</ScrollPane>
					</children>
					<VBox.margin>
						<Insets top="10.0" />
					</VBox.margin>
				</VBox>
				<VBox>
					<children>
						<Label text="Calques">
							<font>
								<Font name="System Bold" size="24.0" />
							</font>
						</Label>
						<HBox prefHeight="30.0">
							<children>
								<Label minWidth="100.0" text="Opacité">
									<font>
										<Font size="18.0" />
									</font>
									<HBox.margin>
										<Insets left="20.0" right="5.0" />
									</HBox.margin>
								</Label>
								<TextField fx:id="opacityTextField" onAction="#OnInputTextChanged">
									<HBox.margin>
										<Insets right="5.0" />
									</HBox.margin>
                           <tooltip>
                              <Tooltip text="Opacité du calque actif" />
                           </tooltip>
								</TextField>
							</children>
						</HBox>
						<Slider fx:id="opacitySlider" blockIncrement="5.0" majorTickUnit="5.0" minorTickCount="1" onMouseDragged="#OnMouseDragged" onMousePressed="#OnMousePressed" onMouseReleased="#OnMouseReleased" snapToTicks="true" value="100.0">
                     <tooltip>
                        <Tooltip text="Opacité du calque actif" />
                     </tooltip></Slider>
						<ScrollPane fitToWidth="true" maxHeight="300.0" minHeight="150.0" prefHeight="300.0">
							<content>
								<VBox fx:id="layersList" minHeight="50.0" />
							</content>
						</ScrollPane>
					</children>
					<opaqueInsets>
						<Insets />
					</opaqueInsets>
					<VBox.margin>
						<Insets top="10.0" />
					</VBox.margin>
				</VBox>
				<HBox spacing="3.0">
					<children>
						<Button fx:id="addNewLayer" mnemonicParsing="false" onAction="#addNewLayer" text="+">
							<HBox.margin>
								<Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
							</HBox.margin>
                     <tooltip>
                        <Tooltip text="Ajouter un calque" />
                     </tooltip>
						</Button>
						<Button fx:id="deleteLayer" mnemonicParsing="false" onAction="#deleteLayer" text="-">
							<HBox.margin>
								<Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
							</HBox.margin>
                     <tooltip>
                        <Tooltip text="Enlever un calque" />
                     </tooltip>
						</Button>
						<Button fx:id="upLayer" mnemonicParsing="false" onAction="#upLayer" text="^">
							<HBox.margin>
								<Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
							</HBox.margin>
                     <tooltip>
                        <Tooltip text="Monter le calque" />
                     </tooltip>
						</Button>
						<Button fx:id="downLayer" mnemonicParsing="false" onAction="#downLayer" text="v">
							<HBox.margin>
								<Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
							</HBox.margin>
                     <tooltip>
                        <Tooltip text="Descendre le calque" />
                     </tooltip>
						</Button>
						<Button fx:id="fusion" mnemonicParsing="false" onAction="#mergeLayer" text="fusion">
							<HBox.margin>
								<Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
							</HBox.margin>
                     <tooltip>
                        <Tooltip text="Fusionner le calque avec le calque inférieur" />
                     </tooltip>
						</Button>
					</children>
					<VBox.margin>
						<Insets bottom="10.0" top="10.0" />
					</VBox.margin>
				</HBox>
			</children>
		</VBox>
	</children>
	<padding>
		<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
	</padding>
</AnchorPane>
