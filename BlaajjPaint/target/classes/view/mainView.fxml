<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.layout.*?>
<BorderPane fx:id="mainView" prefHeight="400.0" prefWidth="600.0" stylesheets="@mainStyleSheet.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.MainViewController">
	<top>
		<VBox BorderPane.alignment="CENTER">
			<children>
				<fx:include fx:id="menuBar" source="menubar/menubar.fxml"/>
			</children>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
		</VBox>
	</top>
	<center>
		<Canvas fx:id="canvas" height="400.0" width="600" />
	</center>
	<left>
		<AnchorPane>
   <children>
	   <fx:include fx:id="toolBar" source="tools/toolbar.fxml" AnchorPane.bottomAnchor="0.0" AnchorPane.topAnchor="0.0"/>
   </children>
		</AnchorPane>
	</left>
	<right>
		<AnchorPane>
   <children>
	   <fx:include fx:id="rightMenu" source="rightMenu/rightMenu.fxml" AnchorPane.bottomAnchor="0.0" AnchorPane.topAnchor="0.0"/>
   </children>
		</AnchorPane>
	</right>
</BorderPane>
